.app
  text-align center
  color $orange

  .header
    height 150px
    padding 20px

    .logo
      animation App-logo-spin infinite 20s linear
      height 80px

      &:hover
        animation App-logo-spin infinite .3s linear

  .intro
    font-size large

@keyframes App-logo-spin
  0%  {
    transform rotate(0deg)
    }
  100%  {
    transform rotate(360deg)
    }

